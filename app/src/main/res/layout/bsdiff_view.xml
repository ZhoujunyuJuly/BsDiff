<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".VIew.MainActivity">

    <!--填写路径-->

    <TextView
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/description"/>

    <EditText
        android:id="@+id/old_path"
        android:layout_below="@id/des"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:focusable="false"
        android:theme="@style/BlackEditTextStyle"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/new_path"
        android:layout_below="@id/old_path"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:focusable="false"
        android:theme="@style/BlackEditTextStyle"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/middle_path"
        android:layout_below="@id/new_path"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:focusable="false"
        android:theme="@style/BlackEditTextStyle"
        android:textSize="14sp" />


    <!--差分操作-->

    <Button
        android:id="@+id/diff_btn"
        android:layout_marginLeft="50dp"
        android:layout_width="100dp"
        android:layout_toRightOf="@id/middle_path"
        android:layout_alignTop="@id/middle_path"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:text="开始差分" />

    <TextView
        android:id="@+id/diff_tv"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_below="@id/middle_path" />

    <!--合并操作-->

    <EditText
        android:id="@+id/patch_finish_path"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/diff_tv"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:enabled="false"
        android:theme="@style/BlackEditTextStyle"
        android:hint="@string/output_path_hint"/>

    <EditText
        android:id="@+id/patch_finish_size"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/patch_finish_path"
        android:textSize="14sp"
        android:gravity="center"
        android:enabled="false"
        android:theme="@style/BlackEditTextStyle"
        android:hint="output_size_hint"/>

    <Button
        android:id="@+id/merge_btn"
        android:layout_marginLeft="50dp"
        android:layout_width="100dp"
        android:layout_toRightOf="@id/patch_finish_size"
        android:layout_alignTop="@id/patch_finish_size"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:text="合并" />

    <TextView
        android:id="@+id/merge_tv"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_below="@id/merge_btn" />

    <!--MD5值比较-->

    <EditText
        android:id="@+id/md5_origin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/merge_tv"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:enabled="false"
        android:theme="@style/BlackEditTextStyle"
        android:hint="@string/origin_md5_hint"/>

    <EditText
        android:id="@+id/md5_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/md5_origin"
        android:textSize="14sp"
        android:gravity="center"
        android:enabled="false"
        android:theme="@style/BlackEditTextStyle"
        android:hint="@string/new_md5_hint"/>

    <Button
        android:id="@+id/md5_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/md5_new"
        android:layout_centerHorizontal="true"
        android:text="校验" />

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/md5_btn"
        android:layout_centerHorizontal="true"
        android:text="一键重置" />

</RelativeLayout>